{
    "info": {
        "name": "Pruebas de Integraci\u00f3n - API Reqres",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Obtener usuarios (GET)",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "https://reqres.in/api/users?page=2",
                    "protocol": "https",
                    "host": [
                        "reqres",
                        "in"
                    ],
                    "path": [
                        "api",
                        "users"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "2"
                        }
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test(\"C\u00f3digo de estado es 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "pm.test(\"La respuesta contiene lista de usuarios\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.data.length).to.be.above(0);",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Crear usuario (POST)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Juan\",\n    \"job\": \"Tester\"\n}"
                },
                "url": {
                    "raw": "https://reqres.in/api/users",
                    "protocol": "https",
                    "host": [
                        "reqres",
                        "in"
                    ],
                    "path": [
                        "api",
                        "users"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test(\"C\u00f3digo de estado es 201\", function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "pm.test(\"La respuesta contiene ID\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.id).to.not.be.undefined;",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Registro fallido (POST)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"sydney@fife\"\n}"
                },
                "url": {
                    "raw": "https://reqres.in/api/register",
                    "protocol": "https",
                    "host": [
                        "reqres",
                        "in"
                    ],
                    "path": [
                        "api",
                        "register"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test(\"C\u00f3digo de estado es 400 (registro fallido)\", function () {",
                            "    pm.response.to.have.status(400);",
                            "});",
                            "pm.test(\"Mensaje de error presente\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.error).to.eql(\"Missing password\");",
                            "});"
                        ]
                    }
                }
            ]
        }
    ]
}